//@framework@

function mkScraper(type) {
  if (type == "newspaperArticle") {
    return new Scraper (
        {   title            : new Xpath('//head/meta[@name="title"]/@content').text(),
            itemType         : 'newspaperArticle',
            publicationTitle : "San Francisco Chronicle",
            date             : new Xpath('//div[@class="articleheadings"]//p[@class="date"]').text(),
            creators         : new Xpath('//div[@class="articleheadings"]//p[@class="byline author vcard"]').text().remove(/,.*$/).cleanAuthor("author"),
            attachments      : function (doc, url) { return [{ url: url, title:"SFGate Snapshot", mimeType:"text/html" }]; }
        });
  }
}

function detectWeb(doc, url) {
    return "newspaperArticle";
