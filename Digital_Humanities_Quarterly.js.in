//@framework@

function mkScraper (itemType) {
    if (itemType == "journalArticle") {
        return new Scraper (
            {   title            : new Xpath('//h1[@class="articleTitle"]').text(),
                itemType         : 'journalArticle',
                publicationTitle : "Digital Humanities Quarterly",
                date             : new Xpath('//div[@id="pubInfo"]').text().match(/(.*)Volume\s+\d+\s+Number\s+\d+/),
                volume           : new Xpath('//div[@id="pubInfo"]').text().match(/.*Volume\s+(\d+)\s+Number\s+\d+/),
                issue            : new Xpath('//div[@id="pubInfo"]').text().match(/.*Volume\s+\d+\s+Number\s+(\d+)/),
                creators         : new Xpath('//div[@class="author"]/a[1]').text().cleanAuthor("author"),
                attachments      : function (doc, url) { return [{ url: url, title:"DHQ Snapshot", mimeType:"text/html" }]; }
            });
    } else if (itemType == "multiple") {
        return new MultiScraper(
            {   itemTrans : mkScraper("journalArticle"),
                titles    : new Xpath('//div[@id="mainContent"]/div/p/a').text().trim(),
                urls      : new Xpath('//div[@id="mainContent"]/div/p/a').key('href').text()
            });
    }
}

function detectWeb(doc, url) {
    if (new Xpath('//div[@class="DHQarticle"]').evaluate(doc)) {
        return "journalArticle";
    } else if (new Xpath('//div[@id="mainContent"]/div/p').evaluate(doc)) {
        return "multiple";
    } else {
        return undefined;
    }
}
